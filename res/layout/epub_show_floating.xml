<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/epub_open_image_layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="center">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/epub_view_yuan_floating"
            android:orientation="horizontal">

        <Button
                android:id="@+id/epub_book_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:padding="10dip"
                android:text="复制"
                android:textColor="#fff"/>

        <Button
                android:id="@+id/epub_book_highlights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:padding="10dip"
                android:text="书摘"
                android:textColor="#fff"/>

        <Button
                android:id="@+id/epub_book_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:padding="10dip"
                android:text="批注"
                android:textColor="#fff"/>

        <Button
                android:id="@+id/epub_book_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:padding="10dip"
                android:text="分享"
                android:textColor="#fff"/>
    </LinearLayout>

</RelativeLayout>